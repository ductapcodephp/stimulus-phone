{% extends 'home/layout.html.twig' %}

{% block title %}Đăng Nhập - TechPhone{% endblock %}

{% block body %}
    <div class="login-section">
        <div class="login-container">
            <h2 class="login-title">Đăng nhập</h2>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="login-form">
                <div class="form-group">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" class="form-input" value="{{ last_username }}" required>
                </div>
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <input type="password" id="password" name="_password" class="form-input" required>
                </div>

                <button type="submit" class="cta-button">Đăng nhập</button>
            </form>

            <div class="register-link">
                Chưa có tài khoản? <a href="{{ path('app_register') }}">Đăng ký ngay</a>
            </div>
        </div>
    </div>

    <style>


        .login-section {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .login-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.4);
        }

        .login-title {
            margin-bottom: 1.5rem;
            font-size: 2rem;
            font-weight: bold;
            color: #4ecdc4;
        }

        .login-form {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            text-align: left;
        }

        .form-group label {
            font-size: 1rem;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .form-input {
            padding: 0.8rem;
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: 8px;
            background: rgba(0,0,0,0.3);
            color: white;
            font-size: 1rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #4ecdc4;
            box-shadow: 0 0 10px rgba(78,205,196,0.5);
        }

        .cta-button {
            background: linear-gradient(45deg, #4ecdc4, #1a535c);
            padding: 0.8rem;
            border: none;
            border-radius: 25px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            font-size: 1rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .cta-button:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(78,205,196,0.4);
        }

        .register-link {
            margin-top: 1rem;
            font-size: 0.9rem;
        }

        .register-link a {
            color: #4ecdc4;
            text-decoration: none;
            font-weight: bold;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        .flash-message {
            padding: 0.8rem;
            border-radius: 8px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 1rem;
        }

        .flash-error {
            background: rgba(231, 76, 60, 0.8);
            color: white;
        }
    </style>
{% endblock %}
